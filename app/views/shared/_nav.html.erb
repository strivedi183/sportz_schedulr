<nav>
    <% if @auth.present? %>
      <li>Welcome, <%= @auth.first_name %> | <%= link_to 'Logout', logout_path, :method=>'delete'  %></li>
    <% else %>
      <%= link_to 'Log In', login_path,       :'data-role' => 'button' %>
      <%= link_to 'Log In with Facebook',     '/auth/facebook', :'data-role' => 'button', :'data-ajax' => false %>
      <%= link_to 'Register', new_user_path,  :'data-role' => 'button' %>
    <% end %>

</nav>