<h1>Administration</h1>

<% if flash[:alert] %>
  <div class="alert"><%= flash[:alert] %></div>
<% end %>

<%= form_tag login_path do %>
  <h3>Log In</h3>

  <%= label_tag       :email %>
  <%= text_field_tag  :email %>

  <%= label_tag       :password %>
  <%= text_field_tag  :password %>
  <%= submit_tag      'Log In' %>
<% end %>