= form_tag meetups_path, :method => 'post' do
  %h2=          @event.name
  .description= @event.description
  .date=        format_to_short_date_time @event.date
  .venue=       @event.venue_name
  .address=     @event.venue_address
  .map
    = image_tag "http://maps.google.com/maps/api/staticmap?center=#{@event.venue_address}&zoom=11&size=350x350&maptype=roadmap&sensor=false&markers=#{@event.venue_address}"

  %h1 Choose a Nearby Location
  %ul.spots
    - @venues.each do |venue|
      %li.spot
        = label_tag         :venue, venue.name
        = radio_button_tag  :venue, :name => venue.name, :lat => venue.lat, :lng => venue.lng

  %h1 Friends
  %ul.friends
    - @auth.get_friends.each do |friend|
      %li.friend= friend['name']

  =link_to    'Cancel',        :'data-role' => 'button', :'data-icon'=>'delete', :'data-inline'=>'true'
  =submit_tag 'Create Meetup', :'data-role' => 'button', :'data-icon'=>'check', :'data-inline'=>'true'