
<h1 class='center'>Log In</h1>

<% if flash[:alert].present? %>
  <div class="alert"><%= flash[:alert] %></div>
<% end %>

<%= form_tag 'login' do %>
  <%= text_field_tag      :email, nil, :placeholder => 'email' %>
  <%= password_field_tag  :password, nil, :placeholder => 'password' %>
  <%= button_tag          'Log In' %>
<% end %>